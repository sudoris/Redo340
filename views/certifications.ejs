<% include partials/header %>

<div class="modal-body;">
	<div class="col-md-4" style="width:50%; float:left">
		<div class="border border-info rounded-sm p-3 bg-white form-wrapper"> 
		<h2 align="center" style="padding-top:5px; padding-bottom:-15px">Add new certification</h2>
		<fieldset>  
			<form action="" method="POST" enctype="application/x-www-form-urlencoded">
			  <div class="form-group;" style="padding-left:80px; padding-right:57px;">
					<label for="certNameInput">Name of certification:</label>
					<input type="text" class="form-control" id="certNameInput" name="certName" placeholder="">
			  </div>
				
				<div class="form-group" style="padding-left:80px; padding-right:57px;">
					<label for="expDateInput">Expiration Date: </label>
					<input type="date" class="form-control" name="expDate" id="expDateInput" placeholder="Expiration date">
				</div> 
						
				<button type="submit" class="btn btn-primary mt-2" style="position:relative; left:220px; width: 175px;">Submit</button>
			</form>
		</fieldset>
	</div>
</div>
	
<div class="col-md-8" style="width:80%; float:right;">
	<div class="border border-info rounded-sm p-3 bg-white form-wrapper"> 
	<h2 align="center" style="padding-top:5px">Certifications</h2>
	<div class="table-wrapper-scroll-y" style="display:block; max-height: 650px; overflow-y: auto; -ms-overflow-style:-ms-autohiding-scrollbar;">
	<table class="table table-hover">
	<thead style="width:auto !important;">
	<tr>
	  <th>Certification Name</th>
	  <th>Expiration Date</th>
	</tr>
	</thead>
	<tbody>
			<% certifications.forEach((certification, index) => { %>
				<tr>
					<td><%= certification.cert_name%></td>
					<td>                                      
						<div class="d-flex flex-row justify-content-between"> 
						<span class="mr-5"><%= certification.expires %></span>  
						<span>  
						  <span>
							<a href="/certifications/edit/<%= certification.certification_id %>" class="btn btn-sm btn-info mr-2"><i class="far fa-edit"></i></a>
						  </span>            
						</div>      
					  </td>
				</tr>
			<% }) %>
	</tbody>
	</table>
	</div>
	</div>
</div>
</div>

<% include partials/footer %>

