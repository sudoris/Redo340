<% include partials/header %>

<div class="container-fluid">
		<div class="row d-flex flex-row justify-content-center">  
				<div class="col-6">
					<div class="border border-info mt-3 p-5 rounded-sm">
						<h2>Editing information for Branch <%=branch.branch_id %>: <%= branch.city %> </h2>
							<fieldset>  
								<form action="" method="POST" enctype="application/x-www-form-urlencoded">
								<div class="form-group;" style="padding-left:80px; padding-right:57px;">
									<label for="branch-city-input">City Name:</label>
									<input type="text" class="form-control" id="branch-city-input" name="branchCity" value="<%= branch.city %>" placeholder="">
								</div>
								<div class="form-group;" style="padding-left:80px; padding-right:57px;">
									<label for="branch-country-input">Country Name:</label>
									<input type="text" class="form-control" id="branch-country-input" name="branchCountry"  value="<%= branch.country %>" placeholder="">
								</div>    
								<input type="hidden" value="<%= branch.branch_id %>" name="branch_id" id="id-input">
								<button type="submit" class="btn btn-primary mt-3" style="position:relative; left:220px; width: 175px;"> Update </button>
								</form>
							</fieldset>
				</div>
			</div>
		</div>
</div>
    
<% include partials/footer %>
