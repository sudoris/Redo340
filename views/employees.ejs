    </select>
    <br>
	
    <label for="salary-input">Salary:</label>
    <input type="text" id='salary-input' name="">
    <br>
	
    <label for="start-date-input">Start Date:</label>
    <input type="date" id='start-date-input' name="">
    <br>
	
    <label for="employment-status-input">Employment Status:</label>
    <input type="text" id='employment-status-input' name="">
    <br>

    <!-- <label for="manager-input">Manager:</label>
