<% include partials/header %>

<div class="modal-body;">
	<div class="col-md-4" style="width:50%; float:left">
		<h2 align="center" style="padding-top:5px; padding-bottom:-15px">Add new department</h2>
		<fieldset>  
			<form action="">
			 <div class="form-group;" style="padding-left:80px; padding-right:57px;">
				<label for="department-name-input">Name of Department:</label>
				<input type="text" class="form-control" id="department-name-input" placeholder="">
			 </div>
			 <div class="form-group;" style="padding-top:5px;padding-left:80px; padding-right:57px;">
				<label for="department-head-input">Department Head Employee ID#</label>
				<input type="text" class="form-control" id="department-head-input" placeholder="">
			 </div>
			 <div class="form-group;" style="padding-top:5px; padding-left:80px; padding-right:57px;">
				<label for="branch-input">Branch ID#</label>
				<input type="number" class="form-control" id="branch-input" placeholder="">
			 </div>
			 <button type="submit" class="btn btn-primary mt-1" style="position:relative; left:220px; width: 175px;">Submit</button>
			</form>
		</fieldset>
	</div>
	
